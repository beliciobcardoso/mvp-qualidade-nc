{
    // Format configuration
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    // Lint configuration
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.enable": true,
    "eslint.run": "onSave",
    // This is the list of files and paths that will be ignored by the spell checker.
    "cSpell.ignorePaths": [
        "*.md",
        "node_modules/**",
        "*.example",
    ],
    "cSpell.ignoreRegExpList": [
        // This ignores Portuguese strings before the dictionary implementation.
        "/\".*\"/", // "It's ignoring strings between double quotes"
        "/'.*'/", // 'It's ignoring strings between single quotes'
        "/`.*`/" // `It's ignoring strings between backticks`
    ],
    "cSpell.words": [
        "nums",
        "cuid",
        "datasource",
        "developerdeck",
        "endregion",
        "NEXTAUTH",
        "uuidv",
        "vercel"
    ],
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    }
}